<Window x:Class="Game.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Games" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Opacity="0.9">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Orange" Offset="-0.3"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Button Name="game1Btn" Content="1st Game" Margin="10,30,10,10" Width="200" Height="70" Opacity="0.7" Background="#FF4E5355" Foreground="White" FontSize="22" FontFamily="Times New Roman" Cursor="Hand" Click="game1Btn_Click"/>
            <Button Name="game2Btn" Content="Math Fight" Margin="10,30,10,10" Width="200" Height="70" Opacity="0.7" Background="#FF4E5355" Foreground="White" FontSize="22" FontFamily="Times New Roman" Cursor="Hand" Click="game2Btn_Click"/>
            <Button x:Name="backBtn" Content="Back" Margin="10,30,10,10" Width="200" Height="70" Opacity="0.7" Background="#FF4E5355" Foreground="White" FontSize="22" FontFamily="Times New Roman" Cursor="Hand" Click="backBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
